<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.pdinda.nuwatch_android.MainActivity"
    android:background="#4c0099">

    <org.pdinda.nuwatch_android.Plot
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plot"
        android:background="#000000"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NUWatch Android"
        android:id="@+id/title"
        android:layout_above="@+id/status"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Discovering NUWatches"
        android:id="@+id/status"
        android:layout_above="@+id/green"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:padding="8dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/green"
        android:layout_above="@+id/rate"
        android:padding="8dp"
        android:thumbTint="#00ff00"
        android:progressTint="#00e000"
        android:max="255" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:thumbTint="#ffff00"
        android:progressTint="#e0e000"
        android:max="32" />




</RelativeLayout>
